// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Task {
  id           Int         @id @default(autoincrement())
  longitude    Float
  latitude     Float
  demand       Int
  assigned     Boolean     @default(false)
  createdAt    DateTime    @default(now())
  assignedAt   DateTime?
  assignment   Assignment? @relation(fields: [assignmentId], references: [id])
  assignmentId Int?
}

model Job {
  id          Int       @id @default(autoincrement())
  date        DateTime
  completed   Boolean   @default(false)
  startedAt   DateTime?
  completedAt DateTime?
}

model Assignment {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  vehicle   Vehicle? @relation(fields: [vehicleId], references: [id])
  vehicleId Int?
  user      User?    @relation(fields: [userId], references: [id])
  userId    Int?
  tasks     Task[]
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  role       String       @default("DRIVER")
  pass       String
  assigments Assignment[]
}

model Session {
  refreshToken String   @id
  expiresAt    DateTime
}

model Vehicle {
  id         Int          @id @default(autoincrement())
  name       String
  capacity   Int
  additional Boolean      @default(false)
  assigments Assignment[]
}

model Routing {
  id          String   @unique
  distance    Int
  duration    Int
  startCoords String
  endCoords   String
  manual      Boolean
  pathCoords  String?
  createdAt   DateTime @default(now())

  @@id([startCoords, endCoords])
}

model Settings {
  id                    Int    @id
  depotLocation         String
  routingAlgo           String
  routingAlgoIterations Int
}
